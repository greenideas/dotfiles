    #!/bin/sh
    breakchars="(){}[],^%$#@\"\";:''|\\"
    CLOJURE_DIR=/Library/Clojure/lib/
    CLOJURE="$CLOJURE_DIR"/clojure.jar
    CONTRIB="$CLOJURE_DIR"/clojure-contrib.jar
    CLASSPATH=$PWD:$CLOJURE:$CONTRIB

    if [ $# -eq 0 ]; then 
         exec rlwrap --remember -c -b "$breakchars" \
            -f "$HOME"/.clj_completions \
             java -cp $CLASSPATH clojure.main --repl
    else
         exec java -cp $CLASSPATH clojure.main $1 -- "$@"
    fi

# Utility aliases
alias ls="ls -GF"
alias ll="ls -lGF"
alias la="ls -aGF"
alias log="open -a console log/development.log"
alias t="todo.pl"
alias hm="todo.pl"

# Ruby/Rails aliases
alias sc="script/console"
alias sdb="script/dbconsole"
alias ss="script/server"
alias rc="rcov --rails test/unit/* test/functional/* && open coverage/index.html"

# git aliases
alias gc="git commit"
alias ga="git add"
alias gac="git commit -am"
alias gst="git status --ignore-submodules=dirty"
alias push="git push"
alias pull="git pull"

# SVN aliases
alias co="svn co"
alias ci="svn ci"
alias sa="svn add"
alias st="svn status"
alias saddall="svn st | awk '/\?/ {print $2}' | xargs svn add"

